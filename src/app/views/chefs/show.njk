{% extends 'chefs/header.njk' %}
{% block head %}
    <title>Recipes</title>
    <link rel="stylesheet" href="/showchef.css">
    <link rel="stylesheet" href="/header.css">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="edit">
            <h2>Chef:{{chef.name}}</h2>
            <a href="/admin/chefs/{{chef.id}}/edit" class='btn-edit'>Editar chef</a>
        </div>
        <div class="recipe-img">
            <img class="avatar" src="{{chef.avatar_url}}" alt="image of {{chef.name}}">
        </div>
        <div class="title">
            <div>
                <h1>{{chef.name}}</h1>
                </div>
            <div>
                <p>{{chef.total_recipes}} receitas</p>
            </div>
        </div>       
    </div>

    <section class="cards">
        {% for recipe in recipes %}
          <div class="card" id={{loop.index}}>
            <div class="card-img">
              <img src="{{recipe.image}}" alt="img of {{recipe.title}}"/>
            </div>
            <div class='card-content'>
              <div class="card-title">
                <p>{{recipe.title}}</p>
              </div>
              <div class="card-autor">
                por
                {{recipe.chef_name}}
              </div>
              <div class="card-link">
                <a href="/admin/recipes/{{loop.index}}">Visualizar</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </section>

{% endblock %}