{% extends 'recipes/header.njk' %}
{% block head %}
    <title>Create Recipe</title>
    <link rel="stylesheet" href="/create.css"/>
    <link rel="stylesheet" href="/header.css"/>
{% endblock %}

{% block content %}
    <div class="content">
        <h2>Editando Receitas</h2>

        <form class="form-delete" action="/admin/recipes?_method=DELETE" method="post">
            <input type="hidden" name="id" value="{{recipe.id}}">
            <button type="submit">Deletar</button>
        </form>
        <form action="/admin/recipes?_method=PUT" method="post">
            <div>
                <button type="submit" class="submit">Salvar receita</button>
            </div>

            <div class="item">
                <div>
                    <h3>Imagem da receita</h3>
                </div>
                <div><input type="url" name="image" value="{{recipe.image}}"></div>
            </div>

            <div id="ingredients">
                <div>
                    <h3>Ingredientes</h3>
                </div>
                {% for ingredient in recipe.ingredients %}
                    <div class="ingredient">
                        <input type="text" name="ingredients[]" value="{{ingredient}}"/>
                    </div>
                {% endfor %}
            </div>
            <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

            <div id="preparations">
                <div>
                    <h3>Modo de Preparos</h3>
                </div>
                {% for preparation in recipe.preparations %}
                    <div class="preparation">
                        <input type="text" name="preparations[]" value="{{preparation}}"/>
                    </div>
                {% endfor %}
            </div>
            <button type="button" class="add-preparation">Add preparation</button>

            <div class="item">
                <div>
                    <h3>Informações Adicionais</h3>
                </div>
                <div>
                    <textarea name="information" cols="30" rows="30">{{recipe.information}}</textarea>
                </div>
            </div>
            <input type="hidden" name="id" value="{{recipe.id}}">
        </form>
    </div>

    <script src="/scripts.js"></script>
    <footer>Foodfy</footer>
{% endblock content %}