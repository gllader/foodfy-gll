{% extends 'layout.njk' %}
{% block head %}
<title>Recipes</title>
<link rel="stylesheet" href="/styles.css">
{% endblock %}

{% block content %}
<h1>{{receita.author}}</h1>
<div class="content">
    <section class="cards">
{% for receita in receitas %}  
        <div class="card" id={{loop.index-1}}>
          <div class="card-img">
            <img src="{{receita.image}}" alt="img of {{receita.title}}"/>
          </div>
          <div class="card-title">
            <p>{{receita.title}}</p>
          </div>
          <div class="card-autor">
            por
            {{receita.author}}
          </div>
        </div>
{% endfor %}

</section>
  </div>
  <!-- fim Content-->
</div>
{% endblock %}


